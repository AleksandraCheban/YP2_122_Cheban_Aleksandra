<Page x:Class="YP2_122_Cheban_Aleksandra.ActivPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YP2_122_Cheban_Aleksandra"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ActivPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Введите название товара" FontSize="9"  VerticalAlignment="Center"/>
            <TextBox x:Name="tovarFilterTextBox" Margin="7,7,0,7" MinWidth="100"  TextChanged="tovarFilterTextBox_TextChanged"/>
            <TextBlock Text="Сортировка Ценам" Margin="10,0,0,0" FontSize="9"  VerticalAlignment="Center"/>
            <ComboBox SelectionChanged="sortComboBox_SelectionChanged"  Margin="7,0,0,0" x:Name="sortComboBox" SelectedIndex="0"  VerticalContentAlignment="Center" VerticalAlignment="Center">
                <ComboBoxItem Content="Дороже"/>
                <ComboBoxItem Content="Дешевле"/>
            </ComboBox>
            <Button x:Name="clearFiltersButton" Content="Очистить фильтр"  VerticalAlignment="Center" HorizontalAlignment="Center" Padding="5,8,39,4"  Height="34" FontSize="10" Click="clearFiltersButton_Click_1"/>
        </WrapPanel>
    </Grid>
</Page>
